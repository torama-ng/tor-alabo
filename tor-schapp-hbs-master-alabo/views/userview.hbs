
{{#if user}}
    <div class="container">
        <table class="table table-striped table-primary mt-5">
            <thead>
                <tr>
                <th scope="col">#</th>
                 <th>Profile picture</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Watch Count</th>
                <th scope="col">User Edit</th>
                <th scope="col"> View Details</th>
        
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                <th scope="row">{{@index}}</th>
                <th><img class="tea" src="{{photourl}}"></th>
                <td>{{firstname}}</td>
                <td>{{lastname}}</td>
                <td>{{username}}</td>
                <td>{{email}}</td>
                <td>{{this.activity.length}}</td>
                <td><a href="/users/userform?id={{this._id}}"> <i class="fas fa-user-edit "></i></a></td>
                <td><a href="/users/details"> <i class="fas fa-eye"></i></a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
            
       
    </div>
        
        
        
{{else}}
     <div class="alert alert-danger">Please login</div>
{{/if}}

