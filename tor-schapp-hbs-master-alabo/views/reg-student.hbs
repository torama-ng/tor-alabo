<!-- Default form register -->

<div class="studentbody">
<div class="col-md-5 col-md-offset-2 justify-content-center">
<form method="POST" action="/users/students" class="text-center border border-light p-5">
<div class="mb-4 bg-info  ">
    <p class="h1 mb-4 text-light text-center">Register Student</p>
</div>
    <div class="form-row mb-4">
        <div class="col">
            <!-- First name -->
            <input type="text" id="defaultRegisterFormFirstName" name="surname" class="form-control" placeholder="Surname">
        </div>
        <div class="col">
            <!-- Last name -->
            <input type="text" id="defaultRegisterFormLastName" name="othername" class="form-control" placeholder="Othername">
        </div>
    </div>

    <!-- E-mail -->
    <input type="email" id="defaultRegisterFormEmail" name="email" class="form-control mb-4" placeholder="Parents/Guardian E-mail">

    <!-- Password -->
    <input type="text" id="defaultRegisterFormPassword" name="phone" class="form-control mb-4" placeholder="Phone Number" aria-describedby="defaultRegisterFormPasswordHelpBlock">
    

    <!-- Phone number -->
    <input type="text" id="defaultRegisterPhonePassword" name="class" class="form-control mb-4" placeholder="Class" aria-describedby="defaultRegisterFormPhoneHelpBlock">

     <input type="text" id="defaultRegisterFormPassword" name="state" class="form-control mb-4" placeholder="State" aria-describedby="defaultRegisterFormPasswordHelpBlock">
    

    <!-- Phone number -->
    <input type="text" id="defaultRegisterPhonePassword" name="lga" class="form-control mb-4" placeholder="LGA" aria-describedby="defaultRegisterFormPhoneHelpBlock">
     <input type="text" id="defaultRegisterFormPassword" name="address" class="form-control mb-4" placeholder="Address" aria-describedby="defaultRegisterFormPasswordHelpBlock">
    


   
   
    <!-- Sign up button -->
    <button class="btn btn-info my-4 btn-block" type="submit">Submit</button>

    

    <hr>

</form>
<!-- Default form register -->
</div>


</div>