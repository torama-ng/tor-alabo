
<style>
    .txt-format {
        white-space: nowrap; 
        width: 300px; 
        overflow: hidden;
        text-overflow:ellipsis;
    }

</style>

{{#if user}}
    
    <div class="row container-fluid mt-5" >
       <div class="col-md-8 mt-3">
           <div class="card">
                <video class="bd-placeholder-img card-img-top" id="videoid" poster="/images/thumbnail/{{filename2}}_tn.jpg"
                    controls="controls" autoplay="autoplay"  preload="metadata" >
                     <source  src="/video?path={{vpath}}" type="video/mp4">
                    
                    Your browser does not support video html 5 video tag
                </video>
                <div class="card-body">
                    <p class="card-text" id="videotitle">{{{removeUnderscore filename}}}</p> 
                    <p class="card-text" id="v"></p>
                    <!-- formatMe is a custom helper -->
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            {{!-- <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button> --}}
                        </div>
                        <small class="text-muted" id="vid-0"></small>
                    </div>
                </div>
            </div>
        </div>
       
        <div class="col-md-4 mt-3">
            <h5 id="{{title}}"> {{title}} Play List </h5>
            <div class="card rside bg-dark text-white mb-1" onclick='playMe("{{vpath}}")'>
         
                <img class="card-img" src="/images/thumbnail/{{formatImg filename}}_tn.jpg" alt="Card image">
                <div class="card-body bg-light text-dark">
                    <p class="card-title">{{removeUnderscore filename}}</p>
                    <small class="card-text txt-format">Description</small>
                    <small class="card-text">Duration</small>
                </div>
            </div>
            <hr>
            {{#each files}}   
            <div class="card rside bg-dark text-white mb-1" onclick='playMe("{{this.path}}")'>
         
                <img class="card-img" src="/images/thumbnail/{{formatImg this.name}}_tn.jpg" alt="Card image">
                <div class="card-body bg-light text-dark">
                    <p class="card-title">{{removeUnderscore this.name}}</p>
                    <small class="card-text txt-format">Description</small>
                    <small class="card-text">Duration</small>
                </div>
            </div>
            {{/each}}
            
        </div>
    </div>
        
{{else}}
     <div class="alert alert-danger">Please login</div>
     
{{/if}}

